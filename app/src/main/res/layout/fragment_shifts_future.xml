<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewShiftFuture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FCFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/futureTabLayout" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/futureTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Display4">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choosed" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/applied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applied" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/declined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Declined" />
    </com.google.android.material.tabs.TabLayout>


</androidx.constraintlayout.widget.ConstraintLayout>